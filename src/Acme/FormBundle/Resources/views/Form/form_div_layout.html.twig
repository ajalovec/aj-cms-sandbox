{# Widgets #}
{% extends "form_div_layout.html.twig" %}
{% block form_row %}
{% spaceless %}
    <div class="row-box">
        <div class="form-left left">
            {{ form_label(form) }}
        </div>    	
        <div class="form-right right">
            {{ form_widget(form) }}
        </div>     
        <div class="clear"></div>        
    </div>
    {{ form_errors(form) }}
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
	<div class="ui-widget">
        <div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
	        {% for error in errors %}
	            <p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
	            <strong>{{ name|humanize|trans }}</strong>         
	                {{ error.message|trans }}
	            </p>
	        {% endfor %}
        </div>
    </div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}




{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
    	<div class="choice_widget_child">
	        {{ form_widget(child) }}&nbsp;{{ form_label(child) }}
        </div>
    {% endfor %}
    	<div class="clear"></div>
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}
