{% extends '::base.html.twig' %}
    {% block stylesheets_extends  %}
    	<link rel="stylesheet" href="{{ asset('bundles/acmefancy/css/jquery.fancybox-1.3.4.css') }}" />
    {% endblock %}    
    {% block javascripts_extends  %}
    	<script src="{{ asset('bundles/acmefancy/js/jquery.mousewheel-3.0.4.pack.js') }}" type="text/javascript" ></script>
    	<script src="{{ asset('bundles/acmefancy/js/jquery.fancybox-1.3.4.pack.js') }}" type="text/javascript" ></script>
    	<script src="{{ asset('bundles/acmefancy/js/jquery.fancybox.init.js') }}" type="text/javascript" ></script>
	{% endblock %}
	{% block left_top_column  %}
		{{ knp_menu_render('assortmentCategory') }}
	{% endblock %}
	{% block main_column  %}
		<h1 class="page-title">{{ title }}</h1>
		<div class="images">
		    {% for assortmentPageHasMedia in assortmentPageHasMedias %}
				{% if assortmentPageHasMedia.media %}
					<a class="item-image" href="{% path(assortmentPageHasMedia.media) , 'reference' %}" rel="fancy_gallery">{% spaceless %}
						{% thumbnail assortmentPageHasMedia.media , 'admin' with {'width': 75, 'height': 60} %}
					{% endspaceless %}</a>
				{% endif %}
		    {% endfor %}
		</div>
        <div class="page-content">	
            {{ body|raw }}
        </div>
	{% endblock %} 	