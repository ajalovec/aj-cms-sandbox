{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}


<!DOCTYPE html>

{% block html_tag %}
<html id="html">{% endblock html_tag %}
{% block head_tag %}
<head>{% endblock head_tag %}
{% block head %}
	{% block base_head_meta %}
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% block title %}{{ head_title|default(page_title|default(title|default('HTML 5 predloga'))) }}{% endblock title %}</title>

		{% block head_meta %}
			<meta name="description" content="{{ head_description|default(description|default('Spletna stran')) }}">
		{% endblock head_meta %}
	{% endblock base_head_meta %}

	{% block base_head_style %}
		{{ block('head_style') }}
		
		{% block head_icon %}
			<link rel="shortcut icon" type="image/x-icon" href="{{ tpl_path(head_icon_path|default('favicon.ico')) }}" />
			<link rel="icon" type="image/ico" href="{{ tpl_path(head_icon_path|default('favicon.ico')) }}">

		{% endblock head_icon %}
	{% endblock base_head_style %}


	{% block base_head_script %}
		{% javascripts output='assets/js/modernizr.js' filter='?yui_js'
			'@AJTemplateBundle/Resources/public/js/modernizr-2.6.2.min.js'
		%}
		<script src="{{ asset_url }}" type="text/javascript"></script>
		{% endjavascripts %}

		{{ block('head_script') }}
	{% endblock base_head_script %}

	{{ block('head_bottom') }}

{% endblock head %}
</head>

{% block body_tag %}
<body id="body">{% endblock body_tag %}

{% block base_body %}
	{{ block('body') }}

	{% block base_body_script %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
		{{ block('body_script') }}
	{% endblock base_body_script %}

{% endblock base_body %}

{{ block('body_bottom') }}
</body>
</html>