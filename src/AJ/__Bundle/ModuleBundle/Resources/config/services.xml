<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
 
<parameters>
	<parameter key="aj_module.manager.class">AJ\Bundle\ModuleBundle\ModuleManager</parameter>
	<parameter key="aj_module.twig.widget_extension.class">AJ\Bundle\ModuleBundle\Twig\WidgetExtension</parameter>
</parameters>

<services>
	<service id="aj_module.manager"
			 class="%aj_module.manager.class%"> 
		<argument type="service" id="service_container" />
	</service>


<!-- Twig extension
 --><service id="aj_module.twig.widget_extension"
 			 class="%aj_module.twig.widget_extension.class%"
 			 public="false">
		<tag name="twig.extension" />
		<argument type="service" id="service_container" />
	</service>

<!-- # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
	-# 
	-# EVENT LISTENERS
	-# 
	-# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # -->
		<!-- Kernel events 
		<service id="aj.module.controller_listener" class="AJ\Bundle\ModuleBundle\EventListener\ControllerListener">
			<tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
			<argument type="service" id="kernel" />
			<argument type="service" id="aj_module.manager" />
		</service>
	-->

</services>
 
</container>