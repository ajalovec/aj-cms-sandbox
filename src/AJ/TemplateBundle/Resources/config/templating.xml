<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	 
	<parameters>
 
<parameters>
	<parameter key="aj_template.name_parser.class">AJ\Bundle\TemplateBundle\Templating\TemplateNameParser</parameter>
</parameters>

<services>
	

	<services>
	<!-- Templating name parser
	 --><service id="aj_template.name_parser" class="%aj_template.name_parser.class%">
			<argument type="service" id="kernel" />
		</service>

	<!--Kernel controller event
	 --><service id="aj_template.controller_listener"
	 			 class="AJ\Bundle\TemplateBundle\EventListener\TemplateControllerListener"
	 			 public="false">
			<tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
			<argument type="service" id="aj_template.name_parser" />
		</service>
		

	</services>

</container>