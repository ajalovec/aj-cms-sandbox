{% extends 'AJTemplateBootstrapBundle::admin_layout.html.twig' %}

{% block page_stylesheets %}
    {% stylesheets
        '@JMISiteBundle/Resources/public/layout.less'
        filter='cssrewrite,?uglifycss'
        output='css/bootstrap.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}


{% block page_javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>

    {% javascripts
        '@JMISiteBundle/Resources/public/js/transition.js'
        '@JMISiteBundle/Resources/public/js/tooltip.js'
        '@JMISiteBundle/Resources/public/js/popover.js'
        '@JMISiteBundle/Resources/public/js/button.js'
        '@JMISiteBundle/Resources/public/js/dropdown.js'
        '@JMISiteBundle/Resources/public/js/collapse.js'
        '@JMISiteBundle/Resources/public/js/tab.js'
        '@JMISiteBundle/Resources/public/js/alert.js'
        '@JMISiteBundle/Resources/public/js/modal.js'
        '@JMISiteBundle/Resources/public/js/affix.js'
        '@JMISiteBundle/Resources/public/js/scrollspy.js'
        '@JMISiteBundle/Resources/public/js/carousel.js'
        filter='?uglifyjs2'
        output='js/bootstrap.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}


{% endblock %}



{% block admin_stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/bootstrap/css/bootstrap.min.css') }}" type="text/css" media="all"  />
    <link rel="stylesheet" href="{{ asset('bundles/sonatapage/default.css') }}" type="text/css" media="all" />
{% endblock %}

{% block admin_javascripts %}
    <script src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.23.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sonatajquery/jquery-ui-i18n.js') }}" type="text/javascript"></script>
    
    {% if isAdminPageEditor %}
        <script src="{{ asset('bundles/sonataadmin/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
    {% endif %}
{% endblock %}

