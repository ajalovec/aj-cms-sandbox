{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="nav nav-main {{ settings.class }}">
        {% if settings.title %}<h3>{{ settings.title }}</h3>{% endif %}
        <ul class="sonata-page-menu-chilren-list">
            {% if page %}
                {% for child in page.children %}
                    {% set activeClass = currentPage.slug == child.slug ? 'active' : '' %}
                    <li class="{{ activeClass }}"><a href="{{ path(child) }}" title="{{ child.name|escape }}">{{ child.name }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
{% endblock %}
